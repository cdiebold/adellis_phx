defmodule Adellis.Sales.Condition do
  use Ecto.Schema
  import Ecto.Changeset


  schema "conditions" do
    field :"code,", :string
    field :description, :string

    timestamps()
  end

  @doc false
  def changeset(condition, attrs) do
    condition
    |> cast(attrs, [:"code,", :description])
    |> validate_required([:"code,", :description])
  end
end
